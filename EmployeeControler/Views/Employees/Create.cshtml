@model EmployeeControler.ViewModels.EmployeView
@{
    ViewBag.Title = "Create";
}

<h2>Assinge Task</h2>
<form>
    <div class="form-group">
        @Html.LabelFor(m => m.TaskName) 
        @Html.TextBoxFor(m => m.TaskName, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time) 
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Worker)
        @Html.DropDownListFor(m => m.Worker, new SelectList(Model.Workers, "id", "Name"), "", new { @class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary"> Assinge</button>
</form>

